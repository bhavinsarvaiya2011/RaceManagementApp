<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="RaceManagementApp.UI.Views.UserPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RaceManagementApp.UI.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls" 
    xmlns:local1="using:RaceManagementApp.UI.ViewModels"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- For Title -->
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <!-- For DataGrid -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Title -->
        <TextBlock Text="User List" Style="{StaticResource TitleTextBlockStyle}" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="1" HorizontalAlignment="Center" Margin="0,20,0,20"/>

        <controls:DataGrid ItemsSource="{Binding Users}" AutoGenerateColumns="False" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"
                           AlternatingRowBackground = "LightBlue">
            <controls:DataGrid.Columns>
                <controls:DataGridTextColumn Header="User Name" Binding="{Binding UserName}" />
                <controls:DataGridTextColumn Header="Created On" Binding="{Binding CreatedOn}" />
            </controls:DataGrid.Columns>
        </controls:DataGrid>
    </Grid>
</Page>
